<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="@drawable/bg_card_gray" android:padding="12dp"
    android:layout_marginBottom="12dp" android:orientation="horizontal">

    <ImageView
        android:id="@+id/img"
        android:layout_width="64dp" android:layout_height="64dp"
        android:scaleType="centerCrop" android:contentDescription="@string/untitled"/>

    <LinearLayout
        android:layout_width="0dp" android:layout_height="wrap_content"
        android:layout_weight="1" android:orientation="vertical"
        android:layout_marginStart="12dp">

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Producto" android:textStyle="bold" android:textColor="@color/g_text"
            android:textSize="16sp"/>

        <!-- Cambiamos el acento visual a tinto (si tu @color/g_accent era morado) -->
        <TextView
            android:id="@+id/tvInfo"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="x1 • $100.00 → $100.00"
            android:layout_marginTop="4dp"
            android:textColor="#800000"/>
    </LinearLayout>
</LinearLayout>
